{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDB": {
    "ConnectionString": "${MongoDB__ConnectionString}",
    "DatabaseName": "${MongoDB__DatabaseName}"
  },
  "Firebase": {
    "CredentialsPath": "${Firebase__CredentialsPath}"
  },
  "Authentication": {
    "Google": {
      "ClientId": "${GOOGLE_CLIENT_ID}",
      "ClientSecret": "${GOOGLE_CLIENT_SECRET}",
      "RedirectUri": "https://recipe-sharing-platform-fdim.onrender.com/auth/google/callback"
    },
    "Firebase": {
      "ApiKey": "${FIREBASE_APIKEY}"
    },
    "Frontend": {
      "RedirectUri": "${FRONTEND_REDIRECT_URI}"
    }
  }
}