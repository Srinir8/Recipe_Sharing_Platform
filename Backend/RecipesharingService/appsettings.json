{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDB": {
    "ConnectionString": "${MongoDB__ConnectionString}",
    "DatabaseName": "${MongoDB__DatabaseName}"
  },
  "Firebase": {
    "CredentialsPath": "${Firebase__CredentialsPath}",
    "ApiKey": "${Firebase__ApiKey}"
  },
  "Google": {
    "ClientId": "${Google__ClientId}",
    "ClientSecret": "${Google__ClientSecret}",
    "RedirectUri": "https://recipe-sharing-platform-fdim.onrender.com/auth/google/callback"
  },
  "Frontend": {
    "RedirectUri": "http://localhost:4200/login"
  }
}
